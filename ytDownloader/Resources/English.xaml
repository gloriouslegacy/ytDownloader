    <system:String x:Key="Dialog_AutoScheduleSettings">Auto Schedule Settings</system:String>
    <system:String x:Key="Label_AutoScheduleDescription">Automatically download scheduled channels at specified times.</system:String>
    <system:String x:Key="Label_FrequencyDays">Frequency (Days)</system:String>
    <system:String x:Key="Label_ExecutionTimeSettings">Execution Time</system:String>
