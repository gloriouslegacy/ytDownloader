    <system:String x:Key="Button_DeleteSelected">Delete Selected</system:String>
    <system:String x:Key="Button_DeleteAll">Delete All</system:String>
    <system:String x:Key="Button_Refresh">Refresh</system:String>
    <system:String x:Key="Button_Close">Close</system:String>
    <system:String x:Key="Label_AdvancedSettings">Advanced Settings</system:String>
</ResourceDictionary>
