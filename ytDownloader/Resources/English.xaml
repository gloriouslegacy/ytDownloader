    <system:String x:Key="Label_UrlInput_Schedule">URL Input:</system:String>
    <system:String x:Key="Button_Paste_Schedule">Paste</system:String>
    <system:String x:Key="ToolTip_Paste_Schedule">Paste URL from clipboard</system:String>
    <system:String x:Key="Button_Clear_Schedule">Clear</system:String>
    <system:String x:Key="ToolTip_Clear_Schedule">Clear entered URL</system:String>
    <system:String x:Key="Label_ChannelName">Channel Name:</system:String>
    <system:String x:Key="Header_Select">Select</system:String>
    <system:String x:Key="Header_ChannelName">Channel Name</system:String>
    <system:String x:Key="Header_Url">URL</system:String>
    <system:String x:Key="Header_AddedDate">Added Date</system:String>
    <system:String x:Key="Button_RemoveSelectedSchedule">Remove Selected Schedules</system:String>
    <system:String x:Key="ToolTip_RemoveSelectedSchedule">Delete selected manual schedule items</system:String>
