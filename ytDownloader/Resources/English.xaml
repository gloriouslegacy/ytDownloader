    <system:String x:Key="Header_TaskName">Task Name</system:String>
    <system:String x:Key="Header_Frequency">Frequency</system:String>
    <system:String x:Key="Header_ExecutionTime">Execution Time</system:String>
    <system:String x:Key="Header_NextRun">Next Run</system:String>
