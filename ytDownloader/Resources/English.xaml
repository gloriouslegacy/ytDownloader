    <system:String x:Key="Button_Pause">Pause</system:String>
    <system:String x:Key="Button_Resume">Resume</system:String>
    <system:String x:Key="Button_Stop">Stop</system:String>
    <system:String x:Key="ToolTip_Pause">Pause current download</system:String>
    <system:String x:Key="ToolTip_Resume">Resume paused download</system:String>
    <system:String x:Key="ToolTip_Stop">Stop current download</system:String>

