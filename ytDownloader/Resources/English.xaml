    <system:String x:Key="ToolTip_SubtitleFormat">Subtitle file format (srt: universal, vtt: web, ass: advanced styling)</system:String>
    <system:String x:Key="Label_MaxDownloads">Max Download Count (0 = unlimited)</system:String>
    <system:String x:Key="ToolTip_MaxDownloads">Maximum download count for channel/playlist (0 = unlimited)</system:String>

