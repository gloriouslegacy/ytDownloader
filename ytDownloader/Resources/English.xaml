<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  Menu  -->
    <system:String x:Key="Menu_File">File(_F)</system:String>
    <system:String x:Key="Menu_Exit">Exit(_X)</system:String>
    <system:String x:Key="Menu_Settings">Settings(_S)</system:String>
    <system:String x:Key="Menu_ThemeSwitch">Toggle Theme</system:String>
    <system:String x:Key="Menu_LanguageSwitch">Toggle Language (한국어/English)</system:String>
    <system:String x:Key="Menu_SaveLog">Save Log</system:String>
    <system:String x:Key="Menu_Help">Help(_H)</system:String>
    <system:String x:Key="Menu_GitHubRelease">gloriouslegacy</system:String>
    <system:String x:Key="Menu_YtDlpRelease">yt-dlp</system:String>
    <system:String x:Key="Menu_BtbNRelease">Btbn</system:String>
    <system:String x:Key="Menu_About">About(_A)</system:String>

    <!--  Tabs  -->
    <system:String x:Key="Tab_BasicSettings">Basic Settings</system:String>
    <system:String x:Key="Tab_AdvancedSettings">Advanced Settings</system:String>
    <system:String x:Key="Tab_Schedule">Schedule</system:String>
    <system:String x:Key="Tab_ManualSchedule">Manual Schedule</system:String>
    <system:String x:Key="Tab_AutoSchedule">Auto Schedule</system:String>

    <!--  URL Input  -->
    <system:String x:Key="Label_UrlInput">URL Input</system:String>
    <system:String x:Key="Button_Paste">Paste</system:String>
    <system:String x:Key="Button_Clear">Clear</system:String>
    <system:String x:Key="Button_Download">Download URLs</system:String>
    <system:String x:Key="ToolTip_Paste">Paste URL from clipboard (Ctrl+V)</system:String>
    <system:String x:Key="ToolTip_Clear">Remove all entered URLs</system:String>
    <system:String x:Key="ToolTip_Download">Download entered URL list individually</system:String>

    <!--  Channel/Playlist  -->
    <system:String x:Key="Label_ChannelPlaylist">Channel / Playlist URL Input</system:String>
    <system:String x:Key="Button_ChannelDownload">Download Channel / Playlist</system:String>
    <system:String x:Key="ToolTip_ChannelPaste">Paste channel/playlist URL from clipboard</system:String>
    <system:String x:Key="ToolTip_ChannelClear">Remove all entered channel/playlist URLs</system:String>
    <system:String x:Key="ToolTip_ChannelDownload">Download all videos from channel or playlist (Max count: see advanced settings)</system:String>

    <!--  Save Path  -->
    <system:String x:Key="Label_SavePath">Save Path</system:String>
    <system:String x:Key="Button_Browse">Browse</system:String>
    <system:String x:Key="Button_Open">Open</system:String>
    <system:String x:Key="ToolTip_SavePath">Path where downloaded files will be saved</system:String>
    <system:String x:Key="ToolTip_Browse">Change save path</system:String>
    <system:String x:Key="ToolTip_Open">Open save folder in Explorer</system:String>

    <!--  Format  -->
    <system:String x:Key="Label_Format">Format Selection</system:String>
    <system:String x:Key="Format_BestVideo">Video (Best Quality)</system:String>
    <system:String x:Key="Format_Video1080p">Video (1080p)</system:String>
    <system:String x:Key="Format_Video720p">Video (720p)</system:String>
    <system:String x:Key="Format_Video480p">Video (480p)</system:String>
    <system:String x:Key="Format_AudioMP3">Audio (MP3 V0 VBR)</system:String>
    <system:String x:Key="Format_AudioBest">Audio (Best Original)</system:String>
    <system:String x:Key="Format_AudioFLAC">Audio (FLAC Lossless)</system:String>
    <system:String x:Key="ToolTip_Format">Select video/audio quality to download</system:String>

    <!--  Checkboxes  -->
    <system:String x:Key="CheckBox_SingleVideo">Single Download (Ignore Playlist)</system:String>
    <system:String x:Key="ToolTip_SingleVideo">Download only first video even with playlist URL</system:String>

    <!--  Program Restart  -->
    <system:String x:Key="Button_Restart">Restart Program</system:String>
    <system:String x:Key="ToolTip_Restart">Close and restart the program</system:String>

    <!--  Advanced Settings  -->
    <system:String x:Key="CheckBox_StructuredFolders">Channel/Playlist Folder Structure</system:String>
    <system:String x:Key="ToolTip_StructuredFolders">Organize by creating folders with channel or playlist names</system:String>
    <system:String x:Key="CheckBox_Thumbnail">Save Thumbnail</system:String>
    <system:String x:Key="ToolTip_Thumbnail">Save video thumbnail images</system:String>
    <system:String x:Key="Label_SubtitleSettings">Subtitle Settings</system:String>
    <system:String x:Key="CheckBox_Subtitle">Download Subtitles</system:String>
    <system:String x:Key="ToolTip_Subtitle">Download subtitle files with video</system:String>
