    <system:String x:Key="ToolTip_EditSchedule">Edit selected auto schedule</system:String>
    <system:String x:Key="Button_RemoveSelectedAutoSchedule">Remove Selected Auto Schedules</system:String>
    <system:String x:Key="ToolTip_RemoveSelectedAutoSchedule">Delete selected auto schedule items</system:String>
