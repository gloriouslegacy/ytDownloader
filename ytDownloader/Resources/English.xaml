    <system:String x:Key="Label_ManualSchedule">Manual Scheduled Download</system:String>
    <system:String x:Key="Label_AutoSchedule">Automatic Schedule Settings</system:String>
    <system:String x:Key="Description_AutoSchedule">Automatically download scheduled channels at specified times using Windows Task Scheduler.</system:String>
    <system:String x:Key="Label_ScheduleStatus">Current Status</system:String>
    <system:String x:Key="Button_AddSchedule">Add Schedule</system:String>
    <system:String x:Key="Button_RefreshStatus">Refresh Status</system:String>
    <system:String x:Key="Button_RemoveSchedule">Remove Schedule</system:String>
    <system:String x:Key="Button_RemoveAllSchedules">Remove All Schedules</system:String>
    <system:String x:Key="Button_AutoScheduleSettings">Auto Schedule Settings</system:String>
    <system:String x:Key="Button_RunScheduledDownloads">Run All Schedules</system:String>
    <system:String x:Key="ToolTip_ScheduleChannelUrl">Enter channel or playlist URL</system:String>
    <system:String x:Key="ToolTip_ScheduleChannelName">Channel name (optional)</system:String>
    <system:String x:Key="ToolTip_AddSchedule">Add channel URL to schedule list</system:String>
    <system:String x:Key="ToolTip_RemoveSchedule">Remove selected schedule item</system:String>
    <system:String x:Key="ToolTip_RemoveAllSchedules">Remove all schedule items</system:String>
