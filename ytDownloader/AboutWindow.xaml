<Window x:Class="ytDownloader.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="버전 정보" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="Assets/logo.png">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.TextAlignment="Center">

            <!-- 앱 로고 PNG -->
            <Image Source="Assets/logo.png" Width="64" Height="64" Margin="0,0,0,10"/>

            <TextBlock Text="ytDownloader" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="VersionText" Text="버전: 0.0.0" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/gloriouslegacy/ytDownloader"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    gloriouslegacy (GitHub)
                </Hyperlink>
            </TextBlock>

            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/yt-dlp/yt-dlp"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    yt-dlp (GitHub)
                </Hyperlink>
            </TextBlock>

            <Button Content="확인" Width="80" Margin="0,20,0,0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
