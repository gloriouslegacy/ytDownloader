<Window x:Class="ytDownloader.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="업데이트 중" Height="190" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Topmost="True">
    <Grid Margin="16">
        <StackPanel>
            <!-- 상태 문구 -->
            <TextBlock x:Name="txtStatus"
                 Text="업데이트를 진행 중입니다..."
                 HorizontalAlignment="Center"
                 Margin="0,0,0,12"
                 FontSize="14" FontWeight="Bold"/>

            <!-- 진행률 + 속도/ETA -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,6">
                <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="속도:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSpeed" Text="-" Width="120" VerticalAlignment="Center"/>

                <TextBlock Text="ETA:" Margin="18,0,6,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtEta" Text="-" Width="250" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
