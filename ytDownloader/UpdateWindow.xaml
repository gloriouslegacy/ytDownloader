<Window x:Class="ytDownloader.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="업데이트 중"
        Height="180" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Topmost="True">
    <Grid Margin="15">
        <StackPanel>
            <!-- 안내 문구 -->
            <TextBlock Text="업데이트를 진행 중입니다..."
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"
                       FontSize="14"
                       FontWeight="Bold"/>

            <!-- 진행률 바만 표시 -->
            <ProgressBar x:Name="progressBar"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Margin="0,0,0,10"/>

            <!-- 속도 + ETA -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="속도:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSpeed"
                           Text="-"
                           Width="120"
                           VerticalAlignment="Center"/>

                <TextBlock Text="ETA:" Margin="15,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtEta"
                           Text="-"
                           Width="250"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
