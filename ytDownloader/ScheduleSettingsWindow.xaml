<Window
    x:Class="ytDownloader.ScheduleSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="자동 예약 설정"
    Width="500"
    Height="350"
    WindowStartupLocation="CenterOwner"
    Background="{DynamicResource WindowBackgroundBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  설명  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            TextWrapping="Wrap"
            Foreground="{DynamicResource PrimaryTextBrush}">
            <Run FontWeight="Bold">자동 예약 다운로드 설정</Run>
            <LineBreak />
            <Run>예약된 채널들을 지정한 시간에 자동으로 다운로드합니다.</Run>
        </TextBlock>

        <!--  실행 주기  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryTextBrush}"
                Text="실행 주기 (일)" />
            <ComboBox Name="cmbFrequency" SelectedIndex="0">
                <ComboBoxItem Content="매일 (1일)" Tag="1" />
                <ComboBoxItem Content="2일마다" Tag="2" />
                <ComboBoxItem Content="3일마다" Tag="3" />
                <ComboBoxItem Content="4일마다" Tag="4" />
                <ComboBoxItem Content="5일마다" Tag="5" />
                <ComboBoxItem Content="6일마다" Tag="6" />
                <ComboBoxItem Content="매주 (7일)" Tag="7" />
                <ComboBoxItem Content="10일마다" Tag="10" />
                <ComboBoxItem Content="2주마다 (14일)" Tag="14" />
                <ComboBoxItem Content="3주마다 (21일)" Tag="21" />
                <ComboBoxItem Content="매월 (30일)" Tag="30" />
                <ComboBoxItem Content="31일마다" Tag="31" />
            </ComboBox>
        </StackPanel>

        <!--  실행 시간  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryTextBrush}"
                Text="실행 시간" />
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="cmbHour" Width="100" SelectedIndex="2" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Text="시" />
                <ComboBox Name="cmbMinute" Width="100" SelectedIndex="0" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Text="분" />
            </StackPanel>
        </StackPanel>

        <!--  현재 상태  -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryTextBrush}"
                Text="현재 상태" />
            <TextBlock
                Name="txtStatus"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="등록된 스케줄이 없습니다." />
        </StackPanel>

        <!--  버튼  -->
        <StackPanel
            Grid.Row="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Click="btnRegister_Click"
                Content="등록" />
            <Button
                Width="100"
                Margin="5"
                Click="btnDelete_Click"
                Content="삭제" />
            <Button
                Width="100"
                Margin="5"
                Click="btnClose_Click"
                Content="닫기" />
        </StackPanel>
    </Grid>
</Window>
