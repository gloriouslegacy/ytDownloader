<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="ytDownloader.MainWindow"
        Title="ytDownloader(yt-dlp)" Height="600" Width="1000"
        Background="#1E1E2E" Foreground="White" FontFamily="Segoe UI"
        MinHeight="500" MinWidth="800" ResizeMode="CanResize">

    <Grid Margin="10" Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 버튼 -->
            <RowDefinition Height="Auto"/>
            <!-- 옵션 -->
            <RowDefinition Height="Auto"/>
            <!-- 저장경로 -->
            <RowDefinition Height="Auto"/>
            <!-- URL 입력 -->
            <RowDefinition Height="Auto"/>
            <!-- 채널 -->
            <RowDefinition Height="*"/>
            <!-- 로그 출력 -->
            <RowDefinition Height="Auto"/>
            <!-- 진행상황 -->
        </Grid.RowDefinitions>

        <!-- 상단 버튼 -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8" LastChildFill="False">
            <ComboBox x:Name="comboFormat" Width="150" Height="25"
                      Background="#2B2D42" Foreground="Black" BorderBrush="#3B82F6"
                      SelectedIndex="0" FontSize="12" Margin="0,0,8,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBoxItem Content="Video (MP4)"/>
                <ComboBoxItem Content="Music (MP3)"/>
            </ComboBox>

            <Button x:Name="btnDownload" Content="↓ 다운로드" Width="150" Height="25"
                    Background="#3B82F6" Foreground="White" FontSize="12" Margin="0,0,8,0"
                    Click="btnDownload_Click"/>

            <CheckBox x:Name="ChkSingleVideo" Content="단일 리스트(플레이리스트 무시)"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12" Margin="0,0,8,0"/>

            <Button x:Name="btnOpenFolder" Content="📂 저장 경로 열기" Width="150" Height="25"
                    Background="#22C55E" Foreground="White" FontSize="12"
                    Click="btnOpenFolder_Click"/>
        </DockPanel>

        <!-- 옵션 -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <CheckBox x:Name="SubtitleCheckBox" Content="자막 다운로드" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>

            <TextBlock Text="언어:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12"/>
            <ComboBox x:Name="SubtitleLangComboBox" Width="140" Height="25" Margin="0,0,10,0"
                      Background="#2B2D42" Foreground="Black" BorderBrush="#3B82F6" HorizontalAlignment="Center"/>

            <Button x:Name="BtnLoadSubtitleLang" Content="언어 불러오기" Width="150" Height="25" Margin="0,0,10,0"
                    Background="#6366F1" Foreground="White" FontSize="12" Click="BtnLoadSubtitleLang_Click"/>

            <TextBlock Text="포맷:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12"/>
            <ComboBox x:Name="SubtitleFormatComboBox" Width="100" Height="25" Margin="0,0,10,0"
                      Background="#2B2D42" Foreground="Black" BorderBrush="#3B82F6" HorizontalAlignment="Center">
                <ComboBoxItem Content="srt" IsSelected="True"/>
                <ComboBoxItem Content="vtt"/>
            </ComboBox>

            <CheckBox x:Name="ChkWriteThumbnail" Content="썸네일 저장" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <CheckBox x:Name="ChkStructuredFolders" Content="채널/플레이리스트 폴더" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
        </WrapPanel>

        <!-- 저장 경로 -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="404*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2">
                <TextBlock Text="저장 경로:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12"/>
                <TextBox x:Name="txtSavePath" Height="25" 
                         Background="#2B2D42" Foreground="White" BorderBrush="#2B2D42" 
                         VerticalContentAlignment="Center" FontSize="12" Width="759"/>
            </StackPanel>

            <Button x:Name="btnBrowse" Grid.Column="2" Content="경로 선택" Width="150" Height="25"
                    Background="#475569" Foreground="White" FontSize="12"
                    Click="btnBrowse_Click"/>
        </Grid>

        <!-- URL 입력 -->
        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtUrls" Grid.Column="0" Height="150"
                     Background="#2B2D42" Foreground="White"
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" FontSize="12" Margin="0,0,8,0" BorderBrush="#2B2D42"
                     />

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Content="붙여넣기" Height="25" Margin="0,0,0,6"
                        Background="#3B82F6" Foreground="White" FontSize="12" Click="btnPaste_Click"/>
                <Button Content="지우기" Height="25"
                        Background="#EF4444" Foreground="White" FontSize="12" Click="btnUrlsClear_Click"/>
            </StackPanel>
        </Grid>

        <!-- 채널 다운로드 -->
        <DockPanel Grid.Row="4" Margin="0,0,0,8" LastChildFill="False">
            <TextBox x:Name="txtChannelUrl" Width="756" Height="80"
                    Background="#2B2D42" Foreground="White"
                    BorderThickness="1" BorderBrush="#2B2D42"
                    FontSize="12" TextAlignment="Left"
                    AcceptsReturn="True" TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    ToolTip="채널 또는 RSS URL 입력 (줄바꿈으로 여러 개 입력 가능)"
                    />

            <TextBox x:Name="txtMaxDownloads" Width="60" Height="25" Margin="6,0,0,0"
                     Background="#2B2D42" Foreground="White" BorderBrush="#2B2D42"
                     FontSize="12" TextAlignment="Center" VerticalContentAlignment="Center"
                     Text="5"/>

            <Button x:Name="btnChannelDownload" Content="구독 다운로드" Width="150" Height="25" Margin="6,0,0,0"
                    Background="#3B82F6" Foreground="White" FontSize="12" Click="btnChannelDownload_Click"/>
        </DockPanel>

        <!-- 로그 출력 -->
        <TextBox x:Name="txtOutput" Grid.Row="5" Margin="0,0,0,8"
                 Background="#2B2D42" Foreground="White" BorderBrush="#2B2D42"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" FontSize="12"/>

        <!-- 진행 상태 -->
        <Grid Grid.Row="6" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:Name="progressBar" Grid.Column="0" Height="14" Margin="2,0,8,0"
                         Foreground="#3B82F6" Background="#2B2D42" BorderBrush="#2B2D42"
                         Minimum="0" Maximum="100"/>

            <TextBlock x:Name="txtSpeed" Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center"
                       FontSize="12" Foreground="#F1F5F9" Text="-" />

            <TextBlock x:Name="txtEta" Grid.Column="2" VerticalAlignment="Center" TextAlignment="Center"
                       FontSize="12" Foreground="#F1F5F9" Text="-" />
        </Grid>
    </Grid>
</Window>