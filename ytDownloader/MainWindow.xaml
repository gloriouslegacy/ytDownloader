<Window
    x:Class="ytDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ytDownloader"
    Width="1150"
    Height="850"
    MinWidth="900"
    MinHeight="600"
    Background="{DynamicResource WindowBackgroundBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  버튼 스타일  -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBox  -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  ComboBox  -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>

                            <!--  Editable TextBox (IsEditable=True일 때만 표시)  -->
                            <TextBox
                                Name="PART_EditableTextBox"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Padding="5,3"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Focusable="True"
                                Foreground="{TemplateBinding Foreground}"
                                IsReadOnly="{TemplateBinding IsReadOnly}"
                                Visibility="Hidden" />

                            <!--  Non-Editable ToggleButton  -->
                            <ToggleButton
                                Name="ToggleButton"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                ClickMode="Press"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter
                                        Name="ContentSite"
                                        Margin="5,3,5,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        IsHitTestVisible="False"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                    <Path
                                        Name="Arrow"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                        Fill="{TemplateBinding Foreground}" />
                                </Grid>
                            </ToggleButton>

                            <!--  Dropdown Popup  -->
                            <Popup
                                Name="Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Grid
                                    Name="DropDown"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                    SnapsToDevicePixels="True">
                                    <Border
                                        x:Name="DropDownBorder"
                                        Background="{DynamicResource PrimaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!--  Editable 모드  -->
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                                <Setter TargetName="ToggleButton" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <!--  Hover 효과  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                                <Setter TargetName="PART_EditableTextBox" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBoxItem  -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border
                            Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0">
                            <ContentPresenter TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Menu  -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  MenuItem  -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Icon" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter
                                    Name="Icon"
                                    Grid.Column="0"
                                    Margin="6,0,6,0"
                                    VerticalAlignment="Center"
                                    ContentSource="Icon" />
                                <ContentPresenter
                                    Name="HeaderHost"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                                <TextBlock
                                    Name="InputGestureText"
                                    Grid.Column="2"
                                    Margin="5,2,0,2"
                                    DockPanel.Dock="Right"
                                    Foreground="{TemplateBinding Foreground}"
                                    Text="{TemplateBinding InputGestureText}" />
                                <Path
                                    Name="ArrowPath"
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M 0 0 L 0 7 L 4 3.5 Z"
                                    Fill="{TemplateBinding Foreground}"
                                    Visibility="Collapsed" />
                                <Popup
                                    Name="Popup"
                                    AllowsTransparency="True"
                                    Focusable="False"
                                    IsOpen="{TemplateBinding IsSubmenuOpen}"
                                    Placement="Right"
                                    PopupAnimation="Fade">
                                    <Border
                                        Name="SubmenuBorder"
                                        Background="{DynamicResource PrimaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Role" Value="TopLevelHeader">
                                <Setter TargetName="Popup" Property="Placement" Value="Bottom" />
                                <Setter TargetName="ArrowPath" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="Role" Value="TopLevelItem">
                                <Setter TargetName="Popup" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="ArrowPath" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="Role" Value="SubmenuHeader">
                                <Setter TargetName="ArrowPath" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  CheckBox  -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border
                                Name="Border"
                                Width="16"
                                Height="16"
                                Background="{DynamicResource PrimaryBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                                <Path
                                    Name="CheckMark"
                                    Width="10"
                                    Height="10"
                                    Data="M 0 5 L 3 8 L 8 0"
                                    Stretch="Uniform"
                                    Stroke="{DynamicResource PrimaryTextBrush}"
                                    StrokeThickness="2"
                                    Visibility="Collapsed" />
                            </Border>
                            <ContentPresenter
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                TextElement.Foreground="{TemplateBinding Foreground}" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TabControl  -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>

        <!--  TabItem 스타일  -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            Name="Border"
                            Margin="2,0"
                            Background="{DynamicResource PrimaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header"
                                TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PressedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBlock 전역 스타일  -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  Label 전역 스타일  -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  Separator 스타일  -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="5,3" />
        </Style>

        <!--  ListBox 스타일  -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>

        <!--  ListBoxItem 스타일  -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0">
                            <ContentPresenter TextElement.Foreground="{TemplateBinding Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ProgressBar 스타일  -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PressedBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  DataGrid 스타일  -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="IsReadOnly" Value="False" />
        </Style>

        <!--  DataGridColumnHeader 스타일  -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <!--  DataGridRow 스타일  -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Style.Triggers>
                <!--  마우스 오버 시 배경색 변경 (IsSelected가 False일 때만)  -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                </Trigger>
                <!--  데이터 모델의 IsSelected 속성을 사용하여 포커스와 무관하게 선택 상태 유지  -->
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#87CEEB" />
                    <Setter Property="Foreground" Value="#000000" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--  DataGridCell 스타일  -->
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!--  데이터 모델의 IsSelected 속성을 사용하여 포커스와 무관하게 선택 상태 유지  -->
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#87CEEB" />
                    <Setter Property="Foreground" Value="#000000" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  메뉴바  -->
            <RowDefinition Height="8*" />
            <!--  TabControl (80%)  -->
            <RowDefinition Height="2*" />
            <!--  로그창 (20%)  -->
        </Grid.RowDefinitions>

        <!--  메뉴바  -->
        <Menu
            Grid.Row="0"
            Background="{DynamicResource WindowBackgroundBrush}"
            Foreground="{DynamicResource PrimaryTextBrush}">
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem
                    Click="MenuExit_Click"
                    Header="{DynamicResource Menu_Exit}"
                    InputGestureText="Alt+F4" />
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Settings}">
                <MenuItem
                    Name="MenuTheme"
                    Click="MenuTheme_Click"
                    Header="{DynamicResource Menu_ThemeSwitch}"
                    InputGestureText="Ctrl+T" />
                <MenuItem
                    Name="MenuLanguage"
                    Click="MenuLanguage_Click"
                    Header="{DynamicResource Menu_LanguageSwitch}"
                    InputGestureText="Ctrl+L" />
                <MenuItem
                    Click="MenuSaveLog_Click"
                    Header="{DynamicResource Menu_SaveLog}"
                    InputGestureText="Ctrl+S" />
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Help}">
                <MenuItem Click="MenuGitHub_Click" Header="{DynamicResource Menu_GitHubRelease}" />
                <MenuItem Click="MenuYtDlp_Click" Header="{DynamicResource Menu_YtDlpRelease}" />
                <MenuItem Click="MenuBtbN_Click" Header="{DynamicResource Menu_BtbNRelease}" />
                <Separator />
                <MenuItem Click="MenuAbout_Click" Header="{DynamicResource Menu_About}" />
            </MenuItem>
        </Menu>

        <!--  메인 영역 (TabControl)  -->
        <TabControl
            Name="mainTabControl"
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            SelectionChanged="mainTabControl_SelectionChanged">
            <!--  기본  -->
            <TabItem Header="{DynamicResource Tab_BasicSettings}">
                <Border
                    Margin="10"
                    Padding="15"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <!--  좌측: URL 입력  -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock
                                Margin="5"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                Text="{DynamicResource Label_UrlInput}" />
                            <DockPanel>
                                <Button
                                    Width="80"
                                    Click="btnPaste_Click"
                                    Content="{DynamicResource Button_Paste}"
                                    ToolTip="{DynamicResource ToolTip_Paste}" />
                                <Button
                                    Width="80"
                                    Click="btnUrlsClear_Click"
                                    Content="{DynamicResource Button_Clear}"
                                    ToolTip="{DynamicResource ToolTip_Clear}" />
                                <Button
                                    Width="160"
                                    Click="btnDownload_Click"
                                    Content="{DynamicResource Button_Download}"
                                    ToolTip="{DynamicResource ToolTip_Download}" />
                            </DockPanel>
                            <TextBox
                                Name="txtUrls"
                                Height="60"
                                AcceptsReturn="True"
                                AllowDrop="True"
                                Drop="txtUrls_Drop"
                                PreviewDragOver="TextBox_PreviewDragOver"
                                VerticalScrollBarVisibility="Auto" />

                            <TextBlock
                                Margin="5,15,5,5"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                Text="{DynamicResource Label_ChannelPlaylist}" />
                            <DockPanel>
                                <Button
                                    Width="80"
                                    Click="btnChannelPaste_Click"
                                    Content="{DynamicResource Button_Paste}"
                                    ToolTip="{DynamicResource ToolTip_ChannelPaste}" />
                                <Button
                                    Width="80"
                                    Click="btnChannelClear_Click"
                                    Content="{DynamicResource Button_Clear}"
                                    ToolTip="{DynamicResource ToolTip_ChannelClear}" />
                                <Button
                                    Width="200"
                                    Click="btnChannelDownload_Click"
                                    Content="{DynamicResource Button_ChannelDownload}"
                                    ToolTip="{DynamicResource ToolTip_ChannelDownload}" />
                            </DockPanel>
                            <TextBox
                                Name="txtChannelUrl"
                                Height="60"
                                AcceptsReturn="True"
                                AllowDrop="True"
                                Drop="txtChannelUrl_Drop"
                                PreviewDragOver="TextBox_PreviewDragOver"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>

                        <!--  우측: 설정  -->
                        <ScrollViewer
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!--  기본 설정  -->
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="{DynamicResource Label_SavePath}" />
                                <DockPanel>
                                    <TextBox
                                        Name="txtSavePath"
                                        Width="254"
                                        IsReadOnly="True"
                                        ToolTip="{DynamicResource ToolTip_SavePath}" />
                                    <Button
                                        Width="70"
                                        Click="btnBrowse_Click"
                                        Content="{DynamicResource Button_Browse}"
                                        ToolTip="{DynamicResource ToolTip_Browse}" />
                                    <Button
                                        Width="70"
                                        Click="btnOpenFolder_Click"
                                        Content="{DynamicResource Button_Open}"
                                        ToolTip="{DynamicResource ToolTip_Open}" />
                                </DockPanel>

                                <TextBlock
                                    Margin="5,10,5,5"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="{DynamicResource Label_Format}" />
                                <ComboBox Name="comboFormat" ToolTip="{DynamicResource ToolTip_Format}">
                                    <ComboBoxItem Content="{DynamicResource Format_BestVideo}" />
                                    <ComboBoxItem Content="{DynamicResource Format_Video1080p}" />
                                    <ComboBoxItem Content="{DynamicResource Format_Video720p}" />
                                    <ComboBoxItem Content="{DynamicResource Format_Video480p}" />
                                    <ComboBoxItem Content="{DynamicResource Format_AudioMP3}" />
                                    <ComboBoxItem Content="{DynamicResource Format_AudioBest}" />
                                    <ComboBoxItem Content="{DynamicResource Format_AudioFLAC}" />
                                </ComboBox>

                                <CheckBox
                                    Name="ChkSingleVideo"
                                    Content="{DynamicResource CheckBox_SingleVideo}"
                                    ToolTip="{DynamicResource ToolTip_SingleVideo}" />

                                <!--  고급 설정  -->
                                <Separator Margin="5,15,5,10" />
                                <TextBlock
                                    Margin="5,0,5,5"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="{DynamicResource Label_AdvancedSettings}" />

                                <CheckBox
                                    Name="ChkStructuredFolders"
                                    Content="{DynamicResource CheckBox_StructuredFolders}"
                                    ToolTip="{DynamicResource ToolTip_StructuredFolders}" />
                                <CheckBox
                                    Name="ChkWriteThumbnail"
                                    Content="{DynamicResource CheckBox_Thumbnail}"
                                    ToolTip="{DynamicResource ToolTip_Thumbnail}" />

                                <TextBlock
                                    Margin="5,10,5,5"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="{DynamicResource Label_SubtitleSettings}" />
                                <CheckBox
                                    Name="SubtitleCheckBox"
                                    Content="{DynamicResource CheckBox_Subtitle}"
                                    ToolTip="{DynamicResource ToolTip_Subtitle}" />
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox
                                        Name="SubtitleFormatComboBox"
                                        Width="120"
                                        ToolTip="{DynamicResource ToolTip_SubtitleFormat}">
                                        <ComboBoxItem Content="srt" />
                                        <ComboBoxItem Content="vtt" />
                                        <ComboBoxItem Content="ass" />
                                    </ComboBox>
                                    <ComboBox
                                        Name="SubtitleLangComboBox"
                                        Width="120"
                                        ToolTip="{DynamicResource ToolTip_SubtitleLang}">
                                        <ComboBoxItem Content="ko" />
                                        <ComboBoxItem Content="en" />
                                        <ComboBoxItem Content="ja" />
                                        <ComboBoxItem Content="zh-Hans" />
                                        <ComboBoxItem Content="zh-Hant" />
                                        <ComboBoxItem Content="fr" />
                                        <ComboBoxItem Content="de" />
                                        <ComboBoxItem Content="es" />
                                        <ComboBoxItem Content="ru" />
                                        <ComboBoxItem Content="pt" />
                                        <ComboBoxItem Content="it" />
                                        <ComboBoxItem Content="ar" />
                                        <ComboBoxItem Content="hi" />
                                        <ComboBoxItem Content="th" />
                                        <ComboBoxItem Content="vi" />
                                    </ComboBox>
                                </StackPanel>

                                <Grid Margin="5,10,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{DynamicResource Label_MaxDownloads}" />
                                    <TextBox
                                        Name="txtMaxDownloads"
                                        Grid.Column="1"
                                        Width="80"
                                        ToolTip="{DynamicResource ToolTip_MaxDownloads}" />
                                </Grid>

                                <CheckBox
                                    Name="ChkEnableNotification"
                                    Content="{DynamicResource CheckBox_EnableNotification}"
                                    ToolTip="{DynamicResource ToolTip_EnableNotification}" />

                                <!--  다운로드중지 및 프로그램 재시작 버튼  -->
                                <StackPanel
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <Button
                                        Width="140"
                                        Click="btnStopDownload_Click"
                                        Content="{DynamicResource Button_Stop}"
                                        ToolTip="{DynamicResource ToolTip_Stop}" />
                                    <Button
                                        Width="140"
                                        Click="pgRestart_Click"
                                        Content="{DynamicResource Button_Restart}"
                                        ToolTip="{DynamicResource ToolTip_Restart}" />
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </TabItem>

            <!--  예약 (수동 + 자동 통합)  -->
            <TabItem Name="scheduleTabItem" Header="{DynamicResource Tab_Schedule}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <!--  자동 예약 섹션  -->
                        <Border
                            Padding="15"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  제목 및 설명  -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource PrimaryTextBrush}"
                                        Text="{DynamicResource Label_AutoSchedule}" />
                                    <TextBlock
                                        Margin="0,0,0,0"
                                        Foreground="{DynamicResource SecondaryTextBrush}"
                                        Text="{DynamicResource Description_AutoSchedule}"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <!--  등록된 스케줄 목록 제목  -->
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,0,0,10"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="{DynamicResource Label_RegisteredScheduleList}" />

                                <!--  스케줄 목록  -->
                                <Border
                                    Grid.Row="2"
                                    Margin="0,0,0,10"
                                    Background="{DynamicResource PrimaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                    <DataGrid
                                        Name="lstAutoScheduledTasks"
                                        MinHeight="300"
                                        Background="Transparent"
                                        PreviewMouseLeftButtonDown="lstAutoScheduledTasks_PreviewMouseLeftButtonDown"
                                        PreviewMouseRightButtonDown="lstAutoScheduledTasks_PreviewMouseRightButtonDown"
                                        MouseDoubleClick="lstAutoScheduledTasks_MouseDoubleClick"
                                        SelectionMode="Extended"
                                        SelectionUnit="FullRow">
                                        <DataGrid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem
                                                    Click="btnEditAutoSchedule_Click"
                                                    Header="{DynamicResource Button_EditSchedule}" />
                                                <Separator />
                                                <MenuItem
                                                    Click="btnDeleteSelectedAutoSchedule_Click"
                                                    Header="{DynamicResource Button_RemoveSelectedAutoSchedule}" />
                                                <MenuItem
                                                    Click="btnDeleteAllAutoSchedules_Click"
                                                    Header="{DynamicResource Button_RemoveAllAutoSchedules}" />
                                            </ContextMenu>
                                        </DataGrid.ContextMenu>
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn
                                                Width="50"
                                                Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                Header="{DynamicResource Header_Select}" />
                                            <DataGridTextColumn
                                                Width="250"
                                                Binding="{Binding TaskName}"
                                                Header="{DynamicResource Header_TaskName}"
                                                IsReadOnly="True" />
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding FrequencyDays}"
                                                Header="{DynamicResource Header_Frequency}"
                                                IsReadOnly="True" />
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding ExecutionTime}"
                                                Header="{DynamicResource Header_ExecutionTime}"
                                                IsReadOnly="True" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding NextRunTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                Header="{DynamicResource Header_NextRun}"
                                                IsReadOnly="True" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>

                                <!--  버튼  -->
                                <StackPanel
                                    Grid.Row="3"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <Button
                                        Width="120"
                                        Click="btnOpenTaskScheduler_Click"
                                        Content="{DynamicResource Button_OpenTaskScheduler}"
                                        ToolTip="{DynamicResource ToolTip_OpenTaskScheduler}" />
                                    <Button
                                        Width="170"
                                        Click="btnDeleteSelectedAutoSchedule_Click"
                                        Content="{DynamicResource Button_RemoveSelectedAutoSchedule}"
                                        ToolTip="{DynamicResource ToolTip_RemoveSelectedAutoSchedule}" />
                                    <Button
                                        Width="160"
                                        Click="btnDeleteAllAutoSchedules_Click"
                                        Content="{DynamicResource Button_RemoveAllAutoSchedules}"
                                        ToolTip="{DynamicResource ToolTip_RemoveAllAutoSchedules}" />
                                    <Button
                                        Width="100"
                                        Click="btnRefreshScheduleStatus_Click"
                                        Content="{DynamicResource Button_RefreshStatus}"
                                        ToolTip="{DynamicResource ToolTip_RefreshStatus}" />
                                    <Button
                                        Width="140"
                                        Click="btnAutoScheduleSettings_Click"
                                        Content="{DynamicResource Button_AutoScheduleSettings}"
                                        ToolTip="{DynamicResource ToolTip_AutoScheduleSettings}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--  로그 & 진행 상태  -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Padding="10"
            Background="{DynamicResource SecondaryBackgroundBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Name="txtOutput"
                    Grid.Row="0"
                    AcceptsReturn="True"
                    Background="{DynamicResource LogBackgroundBrush}"
                    BorderThickness="0"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    IsReadOnly="True"
                    VerticalScrollBarVisibility="Auto" />

                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  ProgressBar with percentage overlay  -->
                    <Grid
                        Width="700"
                        Height="20"
                        Margin="5">
                        <ProgressBar
                            Name="progressBar"
                            Width="700"
                            Height="20" />
                        <TextBlock
                            Name="txtProgress"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="0%" />
                    </Grid>
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="{DynamicResource Label_Speed}" />
                    <TextBlock
                        Name="txtSpeed"
                        Width="80"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Text="-" />
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="{DynamicResource Label_ETA}" />
                    <TextBlock
                        Name="txtEta"
                        Width="80"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Text="-" />
                    <Button
                        Name="btnStopDownload"
                        Width="80"
                        Click="btnStopDownload_Click"
                        Content="{DynamicResource Button_Stop}"
                        ToolTip="{DynamicResource ToolTip_Stop}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
