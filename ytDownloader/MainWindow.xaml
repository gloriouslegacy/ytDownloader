<Window x:Class="YouTubeDownloaderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Downloader (yt-dlp WPF)" Height="600" Width="1000"
        Background="#1E1E2E" Foreground="White" FontFamily="Segoe UI">

    <Grid Margin="15" Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 컨트롤 -->
            <RowDefinition Height="Auto"/>
            <!-- 옵션 -->
            <RowDefinition Height="Auto"/>
            <!-- 저장 경로 -->
            <RowDefinition Height="Auto"/>
            <!-- 일반 다운로드 URL -->
            <RowDefinition Height="Auto"/>
            <!-- 채널 구독 다운로드 -->
            <RowDefinition Height="Auto"/>
            <!-- 진행 상태 -->
            <RowDefinition Height="*"/>
            <!-- 로그 출력 -->
        </Grid.RowDefinitions>

        <!-- 상단 컨트롤 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <ComboBox x:Name="comboFormat" Width="140" Height="34"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6"
                      SelectedIndex="0" FontSize="12"
                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                <ComboBoxItem Content="Video (MP4)"/>
                <ComboBoxItem Content="Music (MP3)"/>
            </ComboBox>

            <Button x:Name="btnDownload" Content="↓ 다운로드" Width="140" Height="34" Margin="10,0,0,0"
                    Background="#3B82F6" Foreground="White" FontSize="12" Click="btnDownload_Click"/>
            <CheckBox x:Name="ChkSingleVideo" Content="단일 영상만(플레이리스트 무시)" Margin="12,0,0,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <Button x:Name="btnOpenFolder" Content="📂 저장 경로 열기" Width="140" Height="34" Margin="12,0,0,0"
                    Background="#22C55E" Foreground="White" FontSize="12" Click="btnOpenFolder_Click"/>
        </StackPanel>

        <!-- 옵션 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="34" Margin="0,0,0,12">
            <CheckBox x:Name="SubtitleCheckBox" Content="자막 다운로드" Margin="0,0,12,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <TextBlock Text="언어:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" Foreground="#F1F5F9"/>
            <ComboBox x:Name="SubtitleLangComboBox" Width="130" Height="34" Margin="0,0,12,0"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6" VerticalContentAlignment="Center"/>
            <Button x:Name="BtnLoadSubtitleLang" Content="언어 불러오기" Width="140" Height="34" Margin="0,0,12,0"
                    Background="#6366F1" Foreground="White" FontSize="12" Click="BtnLoadSubtitleLang_Click"/>
            <TextBlock Text="포맷:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" Foreground="#F1F5F9"/>
            <ComboBox x:Name="SubtitleFormatComboBox" Width="100" Height="34" Margin="0,0,12,0"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6" VerticalContentAlignment="Center">
                <ComboBoxItem Content="srt" IsSelected="True"/>
                <ComboBoxItem Content="vtt"/>
            </ComboBox>
            <CheckBox x:Name="ChkWriteThumbnail" Content="썸네일 저장" Margin="0,0,12,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <CheckBox x:Name="ChkStructuredFolders" Content="채널/플레이리스트 폴더" Margin="0,0,12,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
        </StackPanel>

        <!-- 저장 경로 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="저장 경로:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" Foreground="#F1F5F9"/>
            <TextBox x:Name="txtSavePath" Width="600" Height="34"
                     Background="#2B2D42" Foreground="White"
                     BorderThickness="0" Padding="4"
                     FontSize="12" VerticalContentAlignment="Center"/>
            <Button x:Name="btnBrowse" Content="경로 선택" Width="140" Height="34" Margin="10,0,0,0"
                    Background="#475569" Foreground="White" FontSize="12" Click="btnBrowse_Click"/>
        </StackPanel>

        <!-- 일반 다운로드 URL -->
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtUrls" Grid.Column="0" Height="100"
                     Background="#2B2D42" Foreground="White"
                     BorderThickness="0" Padding="4"
                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     FontSize="12" Text="URL 입력(붙여넣기)(다중 가능)"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                <Button Content="붙여넣기" Width="140" Height="34" Margin="0,0,0,8" Click="btnPaste_Click"
                        Background="#3B82F6" Foreground="White" FontSize="12"/>
                <Button Content="지우기" Width="140" Height="34" Click="btnUrlsClear_Click"
                        Background="#EF4444" Foreground="White" FontSize="12"/>
            </StackPanel>
        </Grid>

        <!-- 채널 구독 다운로드 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBox x:Name="txtChannelUrl" Width="600" Height="34"
                     Background="#2B2D42" Foreground="White"
                     BorderThickness="0" Padding="4"
                     FontSize="12" VerticalContentAlignment="Center"
                     Text="채널 URL 입력"
                     GotFocus="TxtChannelUrl_GotFocus" LostFocus="TxtChannelUrl_LostFocus"/>
            <TextBox x:Name="txtMaxDownloads" Width="60" Height="34" Margin="10,0,0,0"
                     Background="#2B2D42" Foreground="White"
                     BorderThickness="0" Padding="4"
                     FontSize="12" TextAlignment="Center" VerticalContentAlignment="Center"
                     Text="5" ToolTip="최대 다운로드 개수"/>
            <Button x:Name="btnChannelDownload" Content="구독 다운로드" Width="140" Height="34" Margin="10,0,0,0"
                    Background="#3B82F6" Foreground="White" FontSize="12" Click="btnChannelDownload_Click"/>
        </StackPanel>

        <!-- 진행 상태 -->
        <Grid Grid.Row="5" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:Name="progressBar" Grid.Column="0" Height="16" Margin="0,0,8,0"
                         Foreground="#3B82F6" Background="#2B2D42"
                         Minimum="0" Maximum="100" VerticalAlignment="Center"/>

            <TextBlock x:Name="txtSpeed" Grid.Column="1" VerticalAlignment="Center"
                       TextAlignment="Center" FontSize="12" Foreground="#F1F5F9" Text="속도: -" />

            <TextBlock x:Name="txtEta" Grid.Column="2" VerticalAlignment="Center"
                       TextAlignment="Center" FontSize="12" Foreground="#F1F5F9" Text="ETA: -" />
        </Grid>

        <!-- 로그 출력 -->
        <TextBox x:Name="txtOutput" Grid.Row="6"
                 Background="#2B2D42" Foreground="White"
                 BorderThickness="0" Padding="4"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" FontSize="12"/>
    </Grid>
</Window>
