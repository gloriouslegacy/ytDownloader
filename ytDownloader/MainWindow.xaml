<Window
    x:Class="ytDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ytDownloader(ytdlp)"
    Width="1150"
    Height="750"
    MinWidth="900"
    MinHeight="600"
    Background="{DynamicResource WindowBackgroundBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize">

    <Window.Resources>
        <!--  버튼 스타일  -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBox  -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  ComboBox  -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  ComboBoxItem  -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}" />
        </Style>

        <!--  MenuItem  -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
        </Style>

        <!--  CheckBox  -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        </Style>

        <!--  TabControl  -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>

        <!--  TabItem 스타일  -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            Name="Border"
                            Background="{DynamicResource PrimaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0"
                            Margin="2,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PressedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  메뉴바  -->
            <RowDefinition Height="Auto" />
            <!--  TabControl  -->
            <RowDefinition Height="*" />
            <!--  로그창  -->
        </Grid.RowDefinitions>

        <!--  메뉴바  -->
        <Menu
            Grid.Row="0"
            Background="{DynamicResource WindowBackgroundBrush}">
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem
                    Click="MenuExit_Click"
                    Header="{DynamicResource Menu_Exit}"
                    InputGestureText="Alt+F4" />
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Settings}">
                <MenuItem
                    Name="MenuTheme"
                    Click="MenuTheme_Click"
                    Header="{DynamicResource Menu_ThemeSwitch}"
                    InputGestureText="Ctrl+T" />
                <MenuItem
                    Name="MenuLanguage"
                    Click="MenuLanguage_Click"
                    Header="{DynamicResource Menu_LanguageSwitch}"
                    InputGestureText="Ctrl+L" />
                <MenuItem
                    Click="MenuSaveLog_Click"
                    Header="{DynamicResource Menu_SaveLog}"
                    InputGestureText="Ctrl+S" />
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Help}">
                <MenuItem
                    Click="MenuGitHub_Click"
                    Header="{DynamicResource Menu_GitHubRelease}" />
                <MenuItem
                    Click="MenuYtDlp_Click"
                    Header="{DynamicResource Menu_YtDlpRelease}" />
                <MenuItem
                    Click="MenuBtbN_Click"
                    Header="{DynamicResource Menu_BtbNRelease}" />
                <Separator />
                <MenuItem
                    Click="MenuAbout_Click"
                    Header="{DynamicResource Menu_About}" />
            </MenuItem>
        </Menu>

        <!--  메인 영역 (TabControl)  -->
        <TabControl
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}">
            <!--  기본 설정  -->
            <TabItem Header="기본 설정">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!--  좌측: URL 입력  -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock
                            Margin="5"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="URL 입력" />
                        <DockPanel>
                            <Button
                                Width="80"
                                Click="btnPaste_Click"
                                Content="붙여넣기"
                                ToolTip="클립보드의 URL을 입력란에 붙여넣기 (Ctrl+V)" />
                            <Button
                                Width="80"
                                Click="btnUrlsClear_Click"
                                Content="지우기"
                                ToolTip="입력한 모든 URL 제거" />
                            <Button
                                Width="160"
                                Click="btnDownload_Click"
                                Content="URL 다운로드"
                                ToolTip="입력한 URL 목록을 개별적으로 다운로드" />
                        </DockPanel>
                        <TextBox
                            Name="txtUrls"
                            Height="120"
                            AcceptsReturn="True"
                            AllowDrop="True"
                            Drop="txtUrls_Drop"
                            PreviewDragOver="TextBox_PreviewDragOver"
                            VerticalScrollBarVisibility="Auto" />

                        <TextBlock
                            Margin="5,15,5,5"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="채널 / 재생목록 URL 입력" />
                        <DockPanel>
                            <Button
                                Width="80"
                                Click="btnChannelPaste_Click"
                                Content="붙여넣기"
                                ToolTip="클립보드의 채널/재생목록 URL 붙여넣기" />
                            <Button
                                Width="80"
                                Click="btnChannelClear_Click"
                                Content="지우기"
                                ToolTip="입력한 모든 채널/재생목록 URL 제거" />
                            <Button
                                Width="160"
                                Click="btnChannelDownload_Click"
                                Content="채널 / 재생목록 다운로드"
                                ToolTip="채널 또는 재생목록의 모든 영상 다운로드 (최대 개수: 고급 설정 참조)" />
                        </DockPanel>
                        <TextBox
                            Name="txtChannelUrl"
                            Height="120"
                            AcceptsReturn="True"
                            AllowDrop="True"
                            Drop="txtChannelUrl_Drop"
                            PreviewDragOver="TextBox_PreviewDragOver"
                            VerticalScrollBarVisibility="Auto" />
                    </StackPanel>

                    <!--  우측: 저장 경로 & 옵션 + 실행 버튼  -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock
                            Margin="5"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="저장 경로" />
                        <DockPanel>
                            <TextBox
                                Name="txtSavePath"
                                Width="254"
                                IsReadOnly="True"
                                ToolTip="다운로드한 파일이 저장될 경로" />
                            <Button
                                Width="70"
                                Click="btnBrowse_Click"
                                Content="찾기"
                                ToolTip="저장 경로 변경" />
                            <Button
                                Width="70"
                                Click="btnOpenFolder_Click"
                                Content="열기"
                                ToolTip="탐색기에서 저장 폴더 열기" />
                        </DockPanel>

                        <TextBlock
                            Margin="5,10,5,5"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="포맷 선택" />
                        <ComboBox
                            Name="comboFormat"
                            ToolTip="다운로드할 영상/음악 품질 선택">
                            <ComboBoxItem Content="영상 (최고화질)" />
                            <ComboBoxItem Content="영상 (1080p)" />
                            <ComboBoxItem Content="영상 (720p)" />
                            <ComboBoxItem Content="영상 (480p)" />
                            <ComboBoxItem Content="음악 (MP3 V0 VBR)" />
                            <ComboBoxItem Content="음악 (Best 원본유지)" />
                            <ComboBoxItem Content="음악 (FLAC 무손실 변환)" />
                        </ComboBox>

                        <CheckBox
                            Name="ChkSingleVideo"
                            Content="단일 다운로드(재생목록 무시)"
                            ToolTip="재생목록 URL을 입력해도 첫 번째 영상만 다운로드" />

                        <!--  다운로드 버튼을 우측 패널 하단에 배치
                        <StackPanel
                            Margin="5,20,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="140"
                                Click="btnDownload_Click"
                                Content="다운로드" />
                            <Button
                                Width="140"
                                Click="btnChannelDownload_Click"
                                Content="채널 다운로드" />
                        </StackPanel>-->
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="140"
                                Click="pgRestart_Click"
                                Content="프로그램 재시작"
                                ToolTip="프로그램을 종료하고 다시 시작" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </TabItem>

            <!--  고급 설정  -->
            <TabItem Header="고급 설정">
                <StackPanel Margin="10">
                    <CheckBox
                        Name="ChkStructuredFolders"
                        Content="채널/재생목록 폴더 구조"
                        ToolTip="채널명 또는 재생목록명으로 폴더를 생성하여 정리" />
                    <CheckBox
                        Name="ChkWriteThumbnail"
                        Content="썸네일 저장"
                        ToolTip="영상 썸네일 이미지를 함께 저장" />

                    <TextBlock
                        Margin="5,10,5,5"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="자막 설정" />
                    <CheckBox
                        Name="SubtitleCheckBox"
                        Content="자막 다운로드"
                        ToolTip="영상과 함께 자막 파일 다운로드" />
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                            Name="SubtitleLangComboBox"
                            Width="120"
                            IsEditable="True"
                            ToolTip="자막 언어 선택 (직접 입력 가능: ko, en, ja, zh 등)">
                            <ComboBoxItem Content="ko" />
                            <ComboBoxItem Content="en" />
                            <ComboBoxItem Content="ja" />
                            <ComboBoxItem Content="zh" />
                            <ComboBoxItem Content="fr" />
                            <ComboBoxItem Content="de" />
                        </ComboBox>
                        <ComboBox
                            Name="SubtitleFormatComboBox"
                            Width="120"
                            ToolTip="자막 파일 형식 (srt: 범용, vtt: 웹용, ass: 고급 스타일)">
                            <ComboBoxItem Content="srt" />
                            <ComboBoxItem Content="vtt" />
                            <ComboBoxItem Content="ass" />
                        </ComboBox>
                    </StackPanel>

                    <Grid Margin="5,10,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="{DynamicResource Label_MaxDownloads}" />
                        <TextBox
                            Name="txtMaxDownloads"
                            Grid.Column="1"
                            Width="80"
                            ToolTip="{DynamicResource ToolTip_MaxDownloads}" />
                    </Grid>

                    <CheckBox
                        Name="ChkEnableNotification"
                        Content="{DynamicResource CheckBox_EnableNotification}"
                        ToolTip="{DynamicResource ToolTip_EnableNotification}" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <!--  로그 & 진행 상태  -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Padding="10"
            Background="{DynamicResource SecondaryBackgroundBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Name="txtOutput"
                    Grid.Row="0"
                    AcceptsReturn="True"
                    Background="{DynamicResource LogBackgroundBrush}"
                    BorderThickness="0"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    IsReadOnly="True"
                    VerticalScrollBarVisibility="Auto" />

                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  ProgressBar with percentage overlay  -->
                    <Grid Width="700" Height="20" Margin="5">
                        <ProgressBar
                            Name="progressBar"
                            Width="700"
                            Height="20" />
                        <TextBlock
                            Name="txtProgress"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="0%" />
                    </Grid>
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="{DynamicResource Label_Speed}" />
                    <TextBlock
                        Name="txtSpeed"
                        Width="80"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Text="-" />
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="{DynamicResource Label_ETA}" />
                    <TextBlock
                        Name="txtEta"
                        Width="80"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Text="-" />
                    <Button
                        Name="btnStopDownload"
                        Width="80"
                        Click="btnStopDownload_Click"
                        Content="{DynamicResource Button_Stop}"
                        ToolTip="{DynamicResource ToolTip_Stop}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
