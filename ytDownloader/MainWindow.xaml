<Window x:Class="YouTubeDownloaderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Downloader (yt-dlp WPF)" Height="460" Width="980"
        Background="#1E1E2E" Foreground="White" FontFamily="Segoe UI">

    <Grid Margin="10" Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <ComboBox x:Name="comboFormat" Width="130" Height="30"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6"
                      SelectedIndex="0" FontSize="12"
                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                <ComboBoxItem Content="Video (MP4)"/>
                <ComboBoxItem Content="Music (MP3)"/>
            </ComboBox>

            <Button x:Name="btnDownload" Content="↓ 다운로드" Width="130" Height="30" Margin="6,0,0,0"
                    Background="#3B82F6" Foreground="White" FontSize="12" Click="btnDownload_Click"/>
            <CheckBox x:Name="ChkSingleVideo" Content="단일 영상만(플레이리스트 무시)" Margin="10,0,0,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <!--<Button x:Name="btnStopDownload" Content="■ 다운로드 정지" Width="130" Height="30" Margin="0,0,10,0"
                      Background="#EF4444" Foreground="White"
                      FontSize="12" Click="btnStopDownload_Click"/>-->
            <Button x:Name="btnOpenFolder" Content="📂 저장 경로 열기" Width="130" Height="30" Margin="10,0,10,0"
        Background="#22C55E" Foreground="White"
        FontSize="12" Click="btnOpenFolder_Click"/>
        </StackPanel>

        <!-- 옵션 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="30" Margin="0,0,0,8">
            <CheckBox x:Name="SubtitleCheckBox" Content="자막 다운로드" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <TextBlock Text="언어:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12" Foreground="#F1F5F9"/>
            <ComboBox x:Name="SubtitleLangComboBox" Width="120" Height="30" Margin="0,0,10,0"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6" FontSize="12"
                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
            <Button x:Name="BtnLoadSubtitleLang" Content="언어 불러오기" Width="130" Height="30" Margin="0,0,10,0"
                    Background="#6366F1" Foreground="White" FontSize="12" Click="BtnLoadSubtitleLang_Click"/>
            <TextBlock Text="포맷:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12" Foreground="#F1F5F9"/>
            <ComboBox x:Name="SubtitleFormatComboBox" Width="90" Height="30" Margin="0,0,10,0"
                      Background="#2B2D42" Foreground="#2B2D42" BorderBrush="#3B82F6" FontSize="12"
                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                <ComboBoxItem Content="srt" IsSelected="True"/>
                <ComboBoxItem Content="vtt"/>
            </ComboBox>
            <CheckBox x:Name="ChkWriteThumbnail" Content="썸네일 저장" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
            <CheckBox x:Name="ChkStructuredFolders" Content="채널/플레이리스트 폴더" Margin="0,0,10,0"
                      VerticalAlignment="Center" Foreground="#F1F5F9" FontSize="12"/>
        </StackPanel>

        <!-- 저장 경로 + URL -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,6">
                <TextBlock Text="저장 경로:" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12" Foreground="#F1F5F9"/>
                <TextBox x:Name="txtSavePath" Width="600" Height="30"
                         Background="#2B2D42" Foreground="White" BorderBrush="#3B82F6" BorderThickness="1"
                         FontSize="12" TextAlignment="Left" VerticalContentAlignment="Center"/>
                <Button x:Name="btnBrowse" Content="경로 선택" Width="130" Height="30" Margin="8,0,0,0"
                        Background="#475569" Foreground="White" FontSize="12"
                        Click="btnBrowse_Click"/>
            </StackPanel>

            <TextBox x:Name="txtUrls" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" Height="100"
                     Background="#2B2D42" Foreground="White" BorderBrush="#3B82F6" BorderThickness="1"
                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     FontSize="12" TextAlignment="Left"
                     Text="URL 입력(붙여넣기)(다중 가능)"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
                <Button Content="붙여넣기" Width="130" Height="30" Margin="0,0,0,6" Click="btnPaste_Click"
                        Background="#3B82F6" Foreground="White" FontSize="12"/>
                <Button Content="지우기" Width="130" Height="30" Click="btnUrlsClear_Click"
                        Background="#EF4444" Foreground="White" FontSize="12"/>
            </StackPanel>
        </Grid>

        <!-- 로그 출력 -->
        <TextBox x:Name="txtOutput" Grid.Row="3" Margin="0,0,0,6"
                 Background="#2B2D42" Foreground="White"
                 BorderBrush="#3B82F6" BorderThickness="1"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"
                 FontSize="12" TextAlignment="Left"/>

        <!-- 진행 상태 -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:Name="progressBar" Grid.Column="0" Height="14" Margin="2,0,8,0"
                         Foreground="#3B82F6" Background="#2B2D42"
                         Minimum="0" Maximum="100"
                         VerticalAlignment="Center"/>

            <TextBlock x:Name="txtSpeed" Grid.Column="1" VerticalAlignment="Center" 
                       TextAlignment="Center" FontSize="12"
                       Foreground="#F1F5F9" Text="속도: -" />

            <TextBlock x:Name="txtEta" Grid.Column="2" VerticalAlignment="Center" 
                       TextAlignment="Center" FontSize="12"
                       Foreground="#F1F5F9" Text="ETA: -" />
        </Grid>
    </Grid>
</Window>
