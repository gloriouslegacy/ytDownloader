<Window
    x:Class="ytDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ytDownloader(ytdlp)"
    Width="1150"
    Height="750"
    Background="#1E1E2E"
    Foreground="White"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  버튼 스타일  -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="#3A3F58" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B526E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A607A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBox  -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Background" Value="#2A2F45" />
            <Setter Property="BorderBrush" Value="#3A3F58" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!--  ComboBox  -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="#2A2F45" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!--  CheckBox  -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  메뉴바  -->
            <RowDefinition Height="Auto" />
            <!--  TabControl  -->
            <RowDefinition Height="*" />
            <!--  로그창  -->
        </Grid.RowDefinitions>

        <!--  메뉴바  -->
        <Menu
            Grid.Row="0"
            Background="#1E1E2E"
            Foreground="White">
            <MenuItem Foreground="White" Header="파일(_F)">
                <MenuItem
                    Click="MenuExit_Click"
                    Foreground="Black"
                    Header="종료(_X)" />
            </MenuItem>
            <MenuItem Foreground="White" Header="도움말(_H)">
                <MenuItem
                    Click="MenuGitHub_Click"
                    Foreground="Black"
                    Header="GitHub 릴리스" />
                <MenuItem
                    Click="MenuYtDlp_Click"
                    Foreground="Black"
                    Header="yt-dlp 릴리스" />
                <Separator />
                <MenuItem
                    Click="MenuAbout_Click"
                    Foreground="Black"
                    Header="정보(_A)" />
            </MenuItem>
        </Menu>

        <!--  메인 영역 (TabControl)  -->
        <TabControl
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="#1E1E2E"
            BorderBrush="#2A2F45">
            <!--  기본 설정  -->
            <TabItem Header="기본 설정">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!--  좌측: URL 입력  -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock
                            Margin="5"
                            FontWeight="Bold"
                            Foreground="#FFF9F6F6"
                            Text="URL 입력" />
                        <DockPanel>
                            <Button
                                Width="80"
                                Click="btnPaste_Click"
                                Content="붙여넣기"
                                ToolTip="클립보드의 URL을 입력란에 붙여넣기 (Ctrl+V)" />
                            <Button
                                Width="80"
                                Click="btnUrlsClear_Click"
                                Content="지우기"
                                ToolTip="입력한 모든 URL 제거" />
                            <Button
                                Width="160"
                                Click="btnDownload_Click"
                                Content="URL 다운로드"
                                ToolTip="입력한 URL 목록을 개별적으로 다운로드" />
                        </DockPanel>
                        <TextBox
                            Name="txtUrls"
                            Height="120"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto" />

                        <TextBlock
                            Margin="5,15,5,5"
                            FontWeight="Bold"
                            Foreground="#FFF7F3F3"
                            Text="채널 / 재생목록 URL 입력" />
                        <DockPanel>
                            <Button
                                Width="80"
                                Click="btnChannelPaste_Click"
                                Content="붙여넣기"
                                ToolTip="클립보드의 채널/재생목록 URL 붙여넣기" />
                            <Button
                                Width="80"
                                Click="btnChannelClear_Click"
                                Content="지우기"
                                ToolTip="입력한 모든 채널/재생목록 URL 제거" />
                            <Button
                                Width="160"
                                Click="btnChannelDownload_Click"
                                Content="채널 / 재생목록 다운로드"
                                ToolTip="채널 또는 재생목록의 모든 영상 다운로드 (최대 개수: 고급 설정 참조)" />
                        </DockPanel>
                        <TextBox
                            Name="txtChannelUrl"
                            Height="120"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto" />
                    </StackPanel>

                    <!--  우측: 저장 경로 & 옵션 + 실행 버튼  -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock
                            Margin="5"
                            FontWeight="Bold"
                            Foreground="#FFF9F9F9"
                            Text="저장 경로" />
                        <DockPanel>
                            <TextBox
                                Name="txtSavePath"
                                Width="254"
                                IsReadOnly="True"
                                ToolTip="다운로드한 파일이 저장될 경로" />
                            <Button
                                Width="70"
                                Click="btnBrowse_Click"
                                Content="찾기"
                                ToolTip="저장 경로 변경" />
                            <Button
                                Width="70"
                                Click="btnOpenFolder_Click"
                                Content="열기"
                                ToolTip="탐색기에서 저장 폴더 열기" />
                        </DockPanel>

                        <TextBlock
                            Margin="5,10,5,5"
                            FontWeight="Bold"
                            Foreground="#FFF9F9F9"
                            Text="포맷 선택" />
                        <ComboBox
                            Name="comboFormat"
                            Foreground="#FF080707"
                            ToolTip="다운로드할 영상/음악 품질 선택">
                            <ComboBoxItem Content="영상 (최고화질)" />
                            <ComboBoxItem Content="영상 (1080p)" />
                            <ComboBoxItem Content="영상 (720p)" />
                            <ComboBoxItem Content="영상 (480p)" />
                            <ComboBoxItem Content="음악 (MP3 V0 VBR)" />
                            <ComboBoxItem Content="음악 (Best 원본유지)" />
                            <ComboBoxItem Content="음악 (FLAC 무손실 변환)" />
                        </ComboBox>

                        <CheckBox
                            Name="ChkSingleVideo"
                            Content="단일 다운로드(재생목록 무시)"
                            ToolTip="재생목록 URL을 입력해도 첫 번째 영상만 다운로드" />

                        <!--  다운로드 버튼을 우측 패널 하단에 배치
                        <StackPanel
                            Margin="5,20,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="140"
                                Click="btnDownload_Click"
                                Content="다운로드" />
                            <Button
                                Width="140"
                                Click="btnChannelDownload_Click"
                                Content="채널 다운로드" />
                        </StackPanel>-->
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Width="140"
                                Click="pgRestart_Click"
                                Content="프로그램 재시작"
                                ToolTip="프로그램을 종료하고 다시 시작" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </TabItem>

            <!--  고급 설정  -->
            <TabItem Header="고급 설정">
                <StackPanel Margin="10">
                    <CheckBox
                        Name="ChkStructuredFolders"
                        Content="채널/재생목록 폴더 구조"
                        ToolTip="채널명 또는 재생목록명으로 폴더를 생성하여 정리" />
                    <CheckBox
                        Name="ChkWriteThumbnail"
                        Content="썸네일 저장"
                        ToolTip="영상 썸네일 이미지를 함께 저장" />

                    <TextBlock
                        Margin="5,10,5,5"
                        FontWeight="Bold"
                        Foreground="#FFF9F9F9"
                        Text="자막 설정" />
                    <CheckBox
                        Name="SubtitleCheckBox"
                        Content="자막 다운로드"
                        ToolTip="영상과 함께 자막 파일 다운로드" />
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                            Name="SubtitleLangComboBox"
                            Width="120"
                            IsEditable="True"
                            Foreground="#FF0A0A0A"
                            ToolTip="자막 언어 선택 (직접 입력 가능: ko, en, ja, zh 등)">
                            <ComboBoxItem Content="ko" />
                            <ComboBoxItem Content="en" />
                            <ComboBoxItem Content="ja" />
                            <ComboBoxItem Content="zh" />
                            <ComboBoxItem Content="fr" />
                            <ComboBoxItem Content="de" />
                        </ComboBox>
                        <ComboBox
                            Name="SubtitleFormatComboBox"
                            Width="120"
                            Foreground="#FF0E0E0E"
                            ToolTip="자막 파일 형식 (srt: 범용, vtt: 웹용, ass: 고급 스타일)">
                            <ComboBoxItem Content="srt" />
                            <ComboBoxItem Content="vtt" />
                            <ComboBoxItem Content="ass" />
                        </ComboBox>
                    </StackPanel>

                    <Grid Margin="5,10,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#FFFBF3F3"
                            Text="최대 다운로드 개수" />
                        <TextBox
                            Name="txtMaxDownloads"
                            Grid.Column="1"
                            Width="80"
                            ToolTip="채널/재생목록 다운로드 시 최대 다운로드 개수 (예: 5)" />
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!--  로그 & 진행 상태  -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Padding="10"
            Background="#2A2F45"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Name="txtOutput"
                    Grid.Row="0"
                    AcceptsReturn="True"
                    Background="#12121C"
                    BorderThickness="0"
                    Foreground="LightGray"
                    IsReadOnly="True"
                    VerticalScrollBarVisibility="Auto" />

                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  ProgressBar with percentage overlay  -->
                    <Grid Width="827" Height="20" Margin="5">
                        <ProgressBar
                            Name="progressBar"
                            Width="827"
                            Height="20" />
                        <TextBlock
                            Name="txtProgress"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="0%" />
                    </Grid>
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Text="속도:" />
                    <TextBlock
                        Name="txtSpeed"
                        Width="100"
                        VerticalAlignment="Center"
                        Text="-" />
                    <TextBlock
                        Margin="15,0,5,0"
                        VerticalAlignment="Center"
                        Text="ETA:" />
                    <TextBlock
                        Name="txtEta"
                        Width="100"
                        VerticalAlignment="Center"
                        Text="-" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
