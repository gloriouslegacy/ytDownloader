<Window
    x:Class="Updater.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="업데이트 중"
    Width="450"
    Height="180"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock
                x:Name="txtStatus"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="업데이트 준비 중..." />
            <ProgressBar
                x:Name="progressBar"
                Height="20"
                IsIndeterminate="True" />
        </StackPanel>
    </Grid>
</Window>
