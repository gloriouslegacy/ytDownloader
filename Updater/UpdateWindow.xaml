<Window x:Class="Updater.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="업데이트 중" Height="200" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Topmost="True">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="업데이트를 진행 중입니다..."
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"
                       FontSize="14"
                       FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <ProgressBar x:Name="progressBar"
                             Width="300"
                             Height="20"
                             Minimum="0"
                             Maximum="100"/>
                <TextBlock x:Name="txtProgress"
                           Text="0%"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="LightGray"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="속도:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSpeed" Text="-" Width="120" VerticalAlignment="Center"/>
                <TextBlock Text="ETA:" Margin="15,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtEta" Text="-" Width="250" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>